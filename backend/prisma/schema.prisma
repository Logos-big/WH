generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  nickname  String
  email     String   @unique
  createdAt DateTime @default(now())

  tournaments Tournament[] @relation("CreatorTournaments")
}

model Tournament {
  id        String   @id @default(cuid())
  name      String
  game      String
  status    String
  createdAt DateTime @default(now())

  creatorId String
  creator   User     @relation("CreatorTournaments", fields: [creatorId], references: [id])
}

model Match {
  id           String   @id @default(cuid())
  tournamentId String
  round        Int
  playerA      String
  playerB      String
  winner       String?
  createdAt    DateTime @default(now())
}
